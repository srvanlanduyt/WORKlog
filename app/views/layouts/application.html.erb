<!DOCTYPE html>
<html>
  <head>
    <title>WORKLOG</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<section class="hero is-primary is-medium">
  <!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <a class="navbar-item">
            <%= link_to 'Back to Index', root_path, class: "navbar-item" %>
          </a>
          <span class="navbar-burger burger" data-target="navbarMenuHeroA">
            <span></span>
            <span></span>
            <span></span>
          </span>
        </div>
        <div id="navbarMenuHeroA" class="navbar-menu">
          <div class="navbar-end">
            <a class="navbar-item">
              <%= link_to 'Home', root_path, class: "navbar-item" %>
            </a>
            <a class="navbar-item">
              <%= link_to 'Create New Post', new_post_path, class: "navbar-item" %>
            </a>
            <span class="navbar-item">
            </span>              
            <% if signed_in? -%>
               <%= link_to 'Sign Out', sign_out_path, method: :delete, class: "navbar-item" %>
            <% else -%>
               <%= link_to 'Sign In', sign_in_path, class: "navbar-item" %>
            <% end -%> 
          </div>
        </div>
      </div>
    </nav>
  </div>

  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        WORKlog
      </h1>
      <h2 class="subtitle">
        <% if signed_in? -%>
                <%= current_user.email %>
              <% else -%>
                Not Signed In
              <% end -%>
      </h2>
    </div>
  </div>

  <!--
  <div class="hero-foot">
    <nav class="tabs">
      <div class="container">
        <ul>
          <li class="is-active"><a>Overview</a></li>
          <li><a>Modifiers</a></li>
          <li><a>Grid</a></li>
          <li><a>Elements</a></li>
          <li><a>Components</a></li>
          <li><a>Layout</a></li>
        </ul>
      </div>
    </nav>
  </div> -->
</section>
    <%= yield %>
  </body>
</html>





